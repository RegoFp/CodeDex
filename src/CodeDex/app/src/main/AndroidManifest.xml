<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeDex">
        <activity
            android:name=".AllNaturesActivity"
            android:exported="false" />
        <activity
            android:name=".AllTypesViewActivity"
            android:exported="false" />
        <activity
            android:name=".TypeViewActivity"
            android:exported="false" />
        <activity
            android:name=".AbilityViewActivity"
            android:exported="false" />
        <activity
            android:name=".AllAbilitiesViewActivity"
            android:exported="false" />
        <activity
            android:name=".MoveViewActivity"
            android:exported="false" />
        <activity
            android:name=".AllMovesActivity"
            android:exported="false" />
        <activity
            android:name=".PokemonView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>